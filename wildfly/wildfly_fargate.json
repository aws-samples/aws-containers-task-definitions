{  
   "memory":"1024",
   "networkMode":"awsvpc",
   "cpu":"512",
   "family":"wildfly",
   "requiresCompatibilities": [
      "FARGATE"
   ], 
   "containerDefinitions":[  
      {  
         "portMappings":[  
            {  
               "hostPort":8080,
               "containerPort":8080,
               "protocol":"tcp"
            },
            {  
               "hostPort":9990,
               "containerPort":9990,
               "protocol":"tcp"
            }
         ],
         "essential":true,
         "name":"wildfly",
         "ulimits":null,
         "image":"jboss/wildfly",
         "command":[  
            "/opt/jboss/wildfly/bin/standalone.sh",
            "-bmanagement",
            "0.0.0.0",
            "-b",
            "0.0.0.0"
         ],
         "logConfiguration":{  
            "logDriver":"awslogs",
            "options":{  
               "awslogs-group":"/ecs/wildfly",
               "awslogs-region":"us-east-1",
               "awslogs-stream-prefix":"ecs"
            }
         },
         "cpu":512,
         "memory":1024
      }
   ]
}